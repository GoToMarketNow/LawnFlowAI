{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ReconciliationWorker",
  "description": "Validates invoice/payment integrity, detects status mismatches, overpayments, and creates billing issues for HIGH severity problems. Uses batched payment retrieval and dedupe keys.",
  "version": "1.0.0",
  "type": "object",
  "trigger": {
    "type": "api",
    "endpoint": "POST /api/billing/reconcile",
    "schedule": "Daily at 2am UTC (configurable)"
  },
  "input": {
    "type": "object",
    "properties": {
      "invoiceIds": {
        "type": "array",
        "items": { "type": "integer" },
        "description": "Optional list of specific invoice IDs to reconcile. If omitted, reconciles all pending invoices for the account."
      },
      "forceRecheck": {
        "type": "boolean",
        "default": false,
        "description": "If true, re-check invoices that were recently reconciled"
      }
    }
  },
  "output": {
    "type": "object",
    "required": ["processed", "issues", "results"],
    "properties": {
      "processed": {
        "type": "integer",
        "description": "Number of invoices processed"
      },
      "issues": {
        "type": "integer",
        "description": "Number of new billing issues created"
      },
      "results": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "invoiceId": { "type": "integer" },
            "isValid": { "type": "boolean" },
            "issues": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["VARIANCE", "SYNC_ERROR", "DUPLICATE", "MISSING_PAYMENT", "OVERPAYMENT"]
                  },
                  "severity": {
                    "type": "string",
                    "enum": ["LOW", "MED", "HIGH"]
                  },
                  "description": { "type": "string" }
                }
              }
            },
            "suggestedActions": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "escalation": {
    "condition": "severity == 'HIGH' or variance > $100",
    "action": "Creates BillingIssue record for human review",
    "sla": "4 hours for HIGH severity issues"
  },
  "dependencies": [
    "invoices table",
    "payments table",
    "billingIssues table",
    "QuickBooks sync status"
  ]
}
